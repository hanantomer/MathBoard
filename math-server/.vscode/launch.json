    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Server",
            "runtimeArgs": [
                "-r",
                "ts-node/register",
                "--loader",
                "ts-node/esm"
            ],
            "args": ["${workspaceFolder}\\build\\app.js"],
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": ["${workspaceFolder}/build/**/*.js", "${workspaceFolder}/../math-db/build/**/*.js"],
            "skipFiles": ["<node_internals>/**"]
        },
    ]
}