{
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "target": "es6",
        "module": "commonjs",
        "lib": ["es6"],
        "outDir": "build",
        "rootDir": "src",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "composite": true,
        "baseUrl": ".",
        "declaration": true,
        "paths": {
            "*": ["../node_modules/@types"]
        },
        "sourceMap": true
    },
    "exclude": ["node_modules", "build/**/*"]
}



