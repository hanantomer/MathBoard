{
    "compilerOptions": {
        "composite": true,
        "target": "ES6",
        "module": "CommonJS",
        "lib": ["ES2021", "ESNext"],
        "outDir": "./build",
        "rootDir": "src",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "*": ["../node_modules/@types"]
        },
        "sourceMap": true,
        "resolveJsonModule": true
    },
    "files": ["./src/client_secret.json"],
    "references": [
        { "path": "../math-common" }, 
        { "path": "../math-db" }],
    "include": ["src/**/*"],
    "exclude": ["node_modules", "build/**/*"]
}
