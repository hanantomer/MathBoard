{
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "target": "es6",
        "module": "commonjs",
        "lib": ["ES2021.String"],
        "outDir": "build",
        "rootDir": "./",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "composite": true,
        "sourceMap": true
    },
    "exclude": ["node_modules", "build/**/*"]
}



