{
    "compilerOptions": {
        "composite": true,
        "target": "esnext",
        "module": "CommonJS",
        "lib": ["ESNext"],
        "outDir": "./build",
        "rootDir": "./src",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "baseUrl": ".",
        "paths": {
            "*": ["../node_modules/@types"]
        },
        "sourceMap": true,
        "resolveJsonModule": true
    },
    "compileOnSave": true,
    //"files": ["./src/dbUtil.ts"],
    "include": ["./src/**/*"],
    "references": [{ "path": "../math-common" }],
    "exclude": ["node_modules", "build/**/*"]
}
