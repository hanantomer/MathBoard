{
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "target": "es6",
        "module": "CommonJS",
        "lib": ["es2021"],
        "outDir": "build",
        "rootDir": "src",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "composite": true,
        "baseUrl": ".", 
        "paths": {
            "*": ["../node_modules/@types"]
        },
        "sourceMap": true
    },
    "exclude": ["node_modules", "build/**/*"]
}