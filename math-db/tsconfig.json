{
    "compilerOptions": {
        
        "composite": true,
        "target": "ES6",
        "module": "CommonJS",
        "lib": ["ES2021", "ESNext"],
        "outDir": "./build",
        "rootDir": "src",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "baseUrl": ".",
        "paths": {
            "*": ["../node_modules/@types"]
        },
        "sourceMap": true,
        "resolveJsonModule": true
    },
    "references": [
        { "path": "../math-common" }
    ],
    "include": ["src/**/*"],
    "exclude": ["node_modules", "build/**/*"]
}
