{
  "compilerOptions": {
    "preserveConstEnums": true,
    "composite": true,
    "sourceMap": true,
    "outDir": "./build",
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["ESNext"],
    "skipLibCheck": true,
    "noImplicitThis": false,
  },
  "exclude": ["node_modules"]
}
