{
  "extends": "../tsconfig.json",
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "outDir": "./build",
    "baseUrl": ".",
    "rootDir": "./src",
    "lib": ["ESNext", "DOM"],
    "paths": {
      "common/*": ["../math-common/src/*"]
    }
  },
  "compileOnSave": true,
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  "references": [
    { "path": "./tsconfig.node.json" },
    { "path": "../math-common" }
  ],
  "exclude": ["node_modules", "build/**/*"]
}
